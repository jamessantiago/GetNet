@{
    ViewData["Title"] = "New Site";
    ViewData["Dependencies"] = Dependencies.GetnetMainWIthFormsAndTables;
}

@section Tabs {
    <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
        <a href="#disc-tab" class="mdl-layout__tab is-active">Discovery</a>
        <a href="#conf-tab" class="mdl-layout__tab">Configuration</a>
    </div>
}

<section class="mdl-layout__tab-panel mdl-cell--6-col is-active" id="disc-tab">
    <div class="page-content">
        <h3>Discover New Sites</h3>
        <div id="discform-results"></div>
        <div id="discform-loading" style="display:none" class="mdl-progress mdl-js-progress mdl-progress__indeterminate"></div>
        <form action="/site/discover" id="discform" class="getnet-ajax-form" data-ajax-reset="true">

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" name="hubip" id="hubip">
                <label class="mdl-textfield__label" for="hubip">Premise/Wan Router IP</label>
            </div>
            <br />

            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                Find
            </button>
        </form>
    </div>
</section>

<section class="mdl-layout__tab-panel mdl-cell--12-col" id="conf-tab">
    <div class="page-content">
        
    </div>
</section>

